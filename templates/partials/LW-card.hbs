<section class="dice-roll second-background">
    {{#if (eq LW.system.Actif true)}}
        <div class="roll">
            <div class="name">{{LW.name}}</div>
            <div class="{{Successtype}} content" style="text-align: center;">
                <span style="text-decoration: underline;">{{rollResult}}</span></br>
                <span style="color: black;">{{localizeResult}}<span></br>
                <span style="color: gray; font-size: small; text-shadow: none;">{{LW.system.Description}}</span>
            </div>
        </div>
    {{else}}
        <div class="roll">
            <div class="name">{{LW.name}}</div>
            <div class="content" style="text-align: center; padding: 10px;">
                <span style="color: gray; font-size: small;">{{{LW.system.Description}}}</span>
            </div>
        </div>
    {{/if}}
</section>