    <div class="row">
        <div class="col-7 main-margin">
            <div class="row row-initial">
                <div class="col-6" style="margin-right: 2px;">
                    <p class="field-name"><b>{{localize "hibern.objects.Damage"}}</b></p>
                    <input name="system.Degats" type="text" value="{{item.system.Degats}}" placeholder='{{localize "hibern.objects.Damage"}}'/>
                </div>
                <div class="col-6" style="margin-left: 2px;">
                    <p class="field-name"><b>{{localize "hibern.objects.Stat"}}</b></p>
                    <select name="system.stat" style="width: 100%; height: 47%;">
                        {{#select item.system.stat}}
                            <option value="FOR">{{localize "hibern.stats.FOR"}}</option>
                            <option value="MAG">{{localize "hibern.stats.MAG"}}</option>
                            <option value="DEX">{{localize "hibern.stats.DEX"}}</option>
                            <option value="CON">{{localize "hibern.stats.CON"}}</option>
                            <option value="ERU">{{localize "hibern.stats.ERU"}}</option>
                            <!--<option value="CHA">{{localize "hibern.stats.CHA"}}</option>-->
                        {{/select}}
                    </select>
                </div>
            </div>
            <!--<div class="row" style="height: initial;">
                <div class="col-6" style="margin-right: 2px;">
                    <p class="field-name"><b>{{localize "hibern.objects.Threshold"}}</b></p>
                    <input name="system.Seuil" type="text" value="{{item.system.Seuil}}" placeholder="Seuil"/>
                </div>
                <div class="col-6" style="margin-left: 2px;">
                    <p class="field-name"><b>{{localize "hibern.objects.Cost"}}</b></p>
                    <input name="system.Cout" type="text" value="{{item.system.Cout}}" placeholder="Cout"/>
                </div>
            </div>-->
            <div class="row" style="height: 60px;">
                <div class="col-11">
                    <p class="field-name"><b>{{localize "hibern.objects.Fatigue"}}</b></p>
                    <input name="system.Fatigue" type="number" value="{{item.system.Fatigue}}" placerholder="0" data-dtype="Number" />
                </div>
                <div class="col-2">
                    <p class="field-name"><b>AS</b></p>
                    <input type="checkbox" name="system.AS" value="{{item.system.AS}}" data-dtype="Boolean"
                        {{checked item.system.AS}} style="margin: 0;" />
                </div>
            </div>

            {{#if (eq item.system.AS true)}}
                <div class="row" style="height: 114px;">
                    <div class="col-6" style="margin-right: 2px;">
                        <p class="field-name"><b>Description</b></p>
<textarea name="system.Description" rows="5" placeholder="Description" style="font-size: 10px;">{{{item.system.Description}}}</textarea>
                    </div>
                    <div class="col-6" style="margin-left: 2px;">
                        <p class="field-name"><b>AS Description</b></p>
<textarea name="system.ASDescription" rows="5" placeholder="AS Description" style="font-size: 10px;">{{{item.system.ASDescription}}}</textarea>
                    </div>
                </div>
            {{else}}
                <p class="field-name"><b>Description</b></p>
<textarea name="system.Description" rows="4" placeholder="Description">{{{item.system.Description}}}</textarea>
            {{/if}}
            <p class="field-name"><b>{{localize "hibern.objects.component"}}</b></p>
            <div style="display: flex; justify-content: center;">
                <select name="system.Composante" style="margin: 0; margin-top: 1px;">
                    <option value="None">None</option>
                    {{#select item.system.Composante}}
                        {{#each abilities as |ability id|}}
                            <option value="{{ability._id}}">{{ability.name}}</option>
                        {{/each}}
                    {{/select}}
                </select>
            </div>
        </div>
        <div class="col-5 sheet-header header">
            <h1 class="item-type">Spell-Card</h1>
            <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name" class="header" /></h1>
            <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="200" width="200" />
        </div>
    </div>
</form>
